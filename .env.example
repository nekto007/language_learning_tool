# Настройки Flask
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=change_this_to_a_secure_random_string

# Настройки базы данных
# Оставьте пустым для использования значения по умолчанию из config/settings.py
DB_FILE=

# Пути к папкам
# Оставьте пустым для использования значений по умолчанию из config/settings.py
MEDIA_FOLDER=
ANKI_MEDIA_PATH=

# Настройки API Forvo
FORVO_API_KEY=your_api_key_here

# Настройки скрапинга
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
REQUEST_TIMEOUT=10
MAX_RETRIES=3
MAX_PAGES=20

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=app.log